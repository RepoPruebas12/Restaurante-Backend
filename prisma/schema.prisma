datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model restaurantes {
  id             Int       @id @default(autoincrement())
  nombre         String    @db.VarChar(100)
  descripcion    String?
  direccion      String?
  logo           String?
  telefono       String?   @db.VarChar(20)
  activo         Boolean?  @default(true)
  fecha_registro DateTime? @default(now()) @db.Timestamp(6)

  propietarioId Int
  propietario   usuarios @relation("RestaurantePropietario", fields: [propietarioId], references: [id])

  usuarios usuarios[] @relation("RestauranteUsuarios")
}

model usuarios {
  id             Int       @id @default(autoincrement())
  nombre         String    @db.VarChar(100)
  email          String    @db.VarChar(100)
  password       String    @db.VarChar(255)
  activo         Boolean?  @default(true)
  fecha_registro DateTime? @default(now()) @db.Timestamp(6)

  restauranteId Int?
  restaurante   restaurantes? @relation("RestauranteUsuarios", fields: [restauranteId], references: [id], onDelete: Cascade)

  restaurantesPropios restaurantes[] @relation("RestaurantePropietario")

  rolId Int?
  rol   roles? @relation(fields: [rolId], references: [id])

  @@unique([restauranteId, email])
  @@index([email], map: "idx_usuarios_email")
  @@index([restauranteId], map: "idx_usuarios_restaurante")
}

model roles {
  id       Int        @id @default(autoincrement())
  nombre   String     @unique @db.VarChar(50)
  usuarios usuarios[]
}
