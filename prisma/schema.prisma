datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model Company {
  uidCompany  String  @id @default(uuid())
  name        String
  type        String?
  logo        String?
  description String?
  address     String?
  phone       String?
  email       String?

  ownerId String @unique
  owner   User   @relation("CompanyOwner", fields: [ownerId], references: [uidUser])

  users User[] @relation("CompanyUsers")

  createdAt DateTime @default(now())
}

model User {
  uidUser   String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  token     String?
  status    Boolean  @default(true)
  phone     String?
  gender    String?
  createdAt DateTime @default(now())

  // ROLE
  roleId Int
  role   Role @relation(fields: [roleId], references: [id])

  // COMPANY (usuario normal)
  companyId String?
  company   Company? @relation("CompanyUsers", fields: [companyId], references: [uidCompany])

  // COMPANY (cuando es propietario)
  ownedCompany Company? @relation("CompanyOwner")
}
